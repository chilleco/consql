SELECT * FROM "{{ table.name |i }}" WHERE TRUE
{%- include "where.sqlt" %}
{% if cursor.serial is not none %}
    AND "id"
        {% if cursor.direction == 'ASC' -%}
            >
        {%- elif cursor.direction == 'DESC' -%}
            <
        {%- else -%}
            {{ "Unknown cursor direction"/0 }}
        {%- endif %}
            {{ cursor.serial |int }}
{% endif %}
ORDER BY "id" {{ cursor.direction |i }}
LIMIT {{ cursor.limit |i }}
