SELECT * FROM "{{ table.name |i }}" WHERE TRUE
{%- include "where.sqlt" %}
{% if option -%}
    AND options @> {{ '[["' + option[0] + '", "' + option[1] + '"]]' }}
{%- endif %}
{% if sort -%}
    ORDER BY
        {% for row in sort %}
            "{{ row |i }}" ASC
        {% endfor %}
{%- endif %}
{% if not pager.disabled -%}
    LIMIT  {{ pager.sql_limit  |i }} OFFSET {{ pager.sql_offset |i }}
{%- endif %}
